<p id="notice"><%= notice %></p>

<h1>Doors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Is open</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doors.each do |door| %>
      <tr>
        <td><%= door.name %></td>
        <td><%= door.description %></td>
        <td><%= door.is_open %></td>
        <td><%= link_to 'Show', door %></td>
        <td><%= link_to 'Edit', edit_door_path(door) %></td>
        <td><%= link_to 'Destroy', door, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'open', open_door_path(door), method: :put %></td>
        <td><%= link_to 'close', close_door_path(door), method: :put %></td>
      </tr>
    <% end %>
  </tbody>
</table>

